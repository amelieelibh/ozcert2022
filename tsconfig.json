{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      // "@contracts/*": [
      //   "contracts/*"
      // ],
      "@typechain-types/*": [
        "typechain-types/*"
      ],
      "@test/*": [
        "test/*"
      ],
    },
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./hardhat.config.ts",
    "./test",
    "./scripts",
    "./deploy",
    "./artifacts/contracts/**/*",
    "./typechain-types/**/*"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
